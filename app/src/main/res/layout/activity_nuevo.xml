<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFEFAFD"
    tools:context=".NuevoActivity">

    <Button
        android:id="@+id/btnGuardar"
        android:layout_width="206dp"
        android:layout_height="57dp"
        android:layout_marginTop="836dp"
        android:backgroundTint="#E91E63"
        android:text="Guardar"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.557"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txtNombre"
        style="@style/Widget.AppCompat.Light.AutoCompleteTextView"
        android:layout_width="526dp"
        android:layout_height="89dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="424dp"
        android:backgroundTint="#FBAFC9"
        android:backgroundTintMode="add"
        android:breakStrategy="high_quality"
        android:drawableLeft="@drawable/nombree"
        android:drawingCacheQuality="auto"
        android:ems="10"
        android:hint="   Nombre"
        android:inputType="text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txtTelefono"
        style="@style/Widget.AppCompat.Light.AutoCompleteTextView"
        android:layout_width="526dp"
        android:layout_height="89dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="540dp"
        android:backgroundTint="#FBAFC9"
        android:backgroundTintMode="add"
        android:breakStrategy="high_quality"
        android:drawableLeft="@drawable/telefono"
        android:drawingCacheQuality="auto"
        android:ems="10"
        android:hint="  Telefono"
        android:inputType="text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txtCorreoElectronico"
        style="@style/Widget.AppCompat.Light.AutoCompleteTextView"
        android:layout_width="531dp"
        android:layout_height="81dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="672dp"
        android:backgroundTint="#FBAFC9"
        android:backgroundTintMode="src_over"
        android:drawableLeft="@drawable/email"
        android:ems="10"
        android:hint="    Email"
        android:inputType="textEmailAddress"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="185dp"
        android:layout_height="50dp"
        android:layout_marginTop="320dp"
        android:fontFamily="serif"
        android:text="Agenda"
        android:textColor="#E91E63"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="170dp"
        android:layout_height="153dp"
        android:layout_marginTop="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/agenda" />

</androidx.constraintlayout.widget.ConstraintLayout>